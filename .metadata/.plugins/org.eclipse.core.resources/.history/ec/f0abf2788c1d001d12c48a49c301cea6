package logic;

import java.util.Arrays;

public class Zoho2 {

	public static void main(String[] args) {
		int[] a=new int[] {1,2,3,4,5,6,7};
		int[] b=new int[a.length];
		System.out.println(a.length/2);
		for(int i=1;i<=a.length;i++) {
			int t=0;
			if(i%2!=0) {
				t=a[i];
				b[i]=a[a.length-i];
			}else {
				b[i]=t;
			}
		}
		System.out.println(Arrays.toString(b));
	}

}
